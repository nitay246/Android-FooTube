<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/white</item>
    </style>

        <style name="CircleImageView">
            <item name="cornerFamily">rounded</item>
            <item name="cornerSize">50%</item>
        </style>


    <style name="ButtonBar">
        <item name="android:background">@color/red</item>
        <item name="android:padding">8dp</item>
    </style>


        <style name="Button" parent="Widget.AppCompat.Button">
            <item name="android:layout_width">0dp</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:layout_weight">1</item>
            <item name="android:background">@color/red</item>
            <item name="android:textColor">#000000</item> <!-- Black color value -->
        </style>



    <style name="SwitchStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/red</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>
    <style name="AltTextViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="BottomBarStyle">
        <item name="android:background">@color/red</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginBottom">232dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="Linear">
        <item name="android:background">@color/red</item>
    </style>

    <style name="ImageButtonStyle">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="BarTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@color/red</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="RecyclerViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>
    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">#000000</item>
    </style>


</resources>
