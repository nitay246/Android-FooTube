<resources>
    <style name="AppThemeNight" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="ButtonBarNight">
        <item name="android:background">@color/red</item>
        <item name="android:padding">8dp</item>
    </style>
    <style name="AltTextViewStyleNight">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="ButtonStyleNight">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/red</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="EditTextStyleNight" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="SwitchStyleNight">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextViewStyleNight">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="BottomBarStyleNight">
        <item name="android:background">@color/red</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginBottom">232dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="LinearNight">
        <item name="android:background">@color/red</item>
    </style>

    <style name="ImageButtonStyleNight">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="BarTextStyleNight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="RecyclerViewStyleNight">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>
</resources>
